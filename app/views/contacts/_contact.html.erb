<div id="<%= dom_id contact %>" class="bg-indigo-700 p-6 m-4 text-white">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= contact.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= contact.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Birthday:</strong>
    <%= contact.birthday %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this contact", contact, class: "rounded-lg my-5 py-3 px-5 bg-gray-900 inline-block font-medium" %>
    <%= link_to 'Edit this contact', edit_contact_path(contact), class: "rounded-lg my-5 py-3 ml-2 px-5 bg-gray-900 inline-block font-medium" %>
  <% end %>
</div>