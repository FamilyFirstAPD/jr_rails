<div class="mx-auto md:w-2/3 w-full text-gray-900">
  <% if notice.present? %>
    <div class="flex justify-center">
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <h1 class="font-bold text-4xl text-gray-900">New contact</h1>

  <%= render "form", contact: @contact %>

  <%= link_to 'Back to contacts', contacts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-900 text-white inline-block font-medium" %>
</div>
