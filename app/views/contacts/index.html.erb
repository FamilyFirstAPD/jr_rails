<%# <div class="mx-auto w-full sm:w-3/4 md:w-1/3 lg:w-2/4 "> %>
<div class="mx-auto w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-auto text-gray-900">Contacts</h1>
    <%= link_to 'New Contact', new_contact_path, class: "rounded-lg py-3 px-5 bg-gray-900 text-white inline-block font-medium" %>
  </div>

  <%# <div id="contacts" class="min-w-full" > %>
  <div id="contacts" class="min-w-full grid lg:grid-cols-2" >
    <%= render @contacts %>
  </div>
</div>